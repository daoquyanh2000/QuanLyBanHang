@model List<QuanLyBanHang.Models.FeaturedProduct>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản phẩm nổi bật</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Tất cả</li>
                        @foreach (var type in Model)
                        {

                            <li data-filter="@(".type_" + type.Id.ToString())">@type.TypeName</li>

                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var type in Model)
            {
                foreach (var item in type.Products)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mix @("type_" + type.Id.ToString()) ">
                        <div class="featured__item">
                            <div class="featured__item__pic set-bg" data-setbg="@item.Images.Where(p=>p.IsPrimary==true).FirstOrDefault().ImageUrl">
                                <ul class="featured__item__pic__hover">
                                    <li><a href="/Product/Detail?ProductId=@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <div class="featured__item__text">
                                <h6><a href="/Product/Detail?ProductId=@item.Id">@item.Title</a></h6>
                                    @if (item.Discount > 0)
                                    {
                                        <span style="text-decoration:line-through; font-weight:400" class="text-muted">@string.Format("{0:#,##0}", Convert.ToDecimal(item.Price)) &#8363;</span>
                                        
                                            var price = item.Price * (1 - (double)item.Discount / 100);
                                        
                                        <span style="padding-left: 5px; color: #dd2222; font-weight: 700 ">@string.Format("{0:#,##0}", Convert.ToDecimal(price)) &#8363;</span>
                                    }
                                    else
                                    {
                                        <span style="font-weight:700" class="">@string.Format("{0:#,##0}", Convert.ToDecimal(item.Price)) &#8363;</span>

                                    }
                            </div>
                        </div>
                    </div>

                }

            }

